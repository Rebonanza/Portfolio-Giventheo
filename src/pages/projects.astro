---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';

import { projects } from '@data/projects';
import '../styles/global.css';
---

<Layout 
  title="All Projects | Giventheo Khemides" 
  description="View all my projects - frontend and backend applications, open source contributions, and experiments."
>
  <Header />
  <main class="flex-grow pt-16">
    <!-- Projects Header -->
    <section class="relative py-20 px-4 bg-background-dark border-b border-slate-800/50 overflow-hidden">
      <!-- Ambient Glow -->
      <div class="absolute top-[-20%] right-[-10%] w-[400px] h-[400px] bg-primary/10 rounded-full blur-[100px] pointer-events-none"></div>
      
      <div class="max-w-[1280px] mx-auto relative z-10">
        <div class="flex items-center gap-4 mb-6">
          <span class="h-px w-8 bg-primary"></span>
          <h2 class="text-primary font-mono uppercase tracking-widest text-sm font-bold">Collections</h2>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6">
          Engineering <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-slate-500">Showcase</span>
        </h1>
        <p class="text-slate-400 text-lg max-w-2xl leading-relaxed">
          A deep dive into the architectures, experiments, and production-grade systems I've designed and engineered.
        </p>
      </div>
    </section>

    <!-- All Projects Grid -->
    <section class="py-20 px-4 bg-slate-900/30">
      <div class="max-w-[1280px] mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {projects.map((project, index) => (
            <ProjectCard project={project} index={index} />
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
