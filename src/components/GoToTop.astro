<button
  id="go-to-top"
  class="fixed bottom-8 right-8 z-50 p-3 rounded-full bg-primary text-white shadow-lg opacity-0 translate-y-10 pointer-events-none transition-all duration-300 hover:scale-110 active:scale-95"
  aria-label="Go to top"
>
  <span class="material-symbols-outlined text-2xl">arrow_upward</span>
</button>

<script>
  const goToTopBtn = document.getElementById('go-to-top');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 400) {
      goToTopBtn?.classList.remove('opacity-0', 'translate-y-10', 'pointer-events-none');
      goToTopBtn?.classList.add('opacity-100', 'translate-y-0', 'pointer-events-auto');
    } else {
      goToTopBtn?.classList.add('opacity-0', 'translate-y-10', 'pointer-events-none');
      goToTopBtn?.classList.remove('opacity-100', 'translate-y-0', 'pointer-events-auto');
    }
  });

  goToTopBtn?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth',
    });
  });
</script>
