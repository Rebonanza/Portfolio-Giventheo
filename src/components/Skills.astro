---
import type { SkillCategory } from '@type/skill';

interface Props {
  skillCategories: SkillCategory[];
}

const { skillCategories } = Astro.props;
---

<!-- Tech Stack Section -->
<section class="py-20 px-4 bg-background-dark relative" id="stack">
  <div class="max-w-[1024px] mx-auto">
    <!-- Section Header -->
    <div class="flex flex-col items-center text-center gap-4 mb-16">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-bold tracking-widest uppercase">
        <span class="w-1.5 h-1.5 rounded-full bg-primary animate-pulse"></span>
        Skills & Expertise
      </div>
      <h2 class="text-4xl md:text-5xl font-bold tracking-tight text-white">
        Technological Arsenal
      </h2>
      <p class="text-slate-400 text-lg max-w-2xl leading-relaxed">
        A curated collection of the tools, frameworks, and technologies I leverage to build scalable, high-performance digital products.
      </p>
    </div>

    <!-- Tech Categories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {skillCategories.map((category) => (
        <div class="flex flex-col gap-5">
          <!-- Category Header -->
          <div class="flex items-center gap-3 pb-2 border-b border-white/5">
            <span class={`material-symbols-outlined text-${category.color}`}>{category.icon}</span>
            <h3 class="text-xl font-bold text-white tracking-wide">{category.title}</h3>
          </div>

          <!-- Skills List -->
          <div class="flex flex-col gap-3">
            {category.skills.map((skill) => (
              <div 
                class={`
                  group flex gap-4 rounded-xl border border-white/5 bg-white/[0.03] p-4 items-center 
                  transition-all duration-300 backdrop-blur-sm cursor-default
                  hover:border-${category.color} hover:bg-white/[0.08] hover:-translate-y-1
                  ${category.color === 'primary' ? 'hover:shadow-[0_0_20px_rgba(37,140,244,0.1)]' : ''}
                  ${category.color === 'purple-400' ? 'hover:shadow-[0_0_20px_rgba(192,132,252,0.1)]' : ''}
                  ${category.color === 'cyan-400' ? 'hover:shadow-[0_0_20px_rgba(34,211,238,0.1)]' : ''}
                `}
              >
                <div 
                  class={`
                    flex items-center justify-center size-10 rounded-lg bg-black/40 
                    text-slate-300 group-hover:text-${category.color} group-hover:scale-110 
                    transition-all duration-300
                  `}
                >
                  <span class="material-symbols-outlined text-[24px]">{skill.icon}</span>
                </div>
                <div class="flex flex-col">
                  <h4 class="text-white text-base font-bold leading-tight">{skill.name}</h4>
                  <span class="text-xs text-slate-500 mt-1">{skill.category}</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
